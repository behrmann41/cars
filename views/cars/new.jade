extends ../layout

block content
  .container
    h1.well= title
    .col-md-4.col-md-offset-3
      form(action='/cars/new' method='post')
        label(for='make') Make:
        input(type='text' id='make' class='form-control' name='carmake' placeholder='example: Ford')
        label(for='model') Model:
        input(type='text' id='model' class='form-control' name='carmodel')
        label(for='year') Year:
        input(type='number' id='year' class='form-control' name='caryear' min='1921' max='2016')
        p
        input(type='submit' value='Enter Car')
      br
      a(href='/cars') Cancel

