extends ../layout

block content

  h1 Edit Driver

  form(action='/drivers/' + theDriver._id + '/edit' method='post')
    label(for='firstname') First Name:
    input(type='text' id='firstname' name='firstname' value=theDriver.firstname)
    label(for='lastname') Last Name:
    input(type='text' id='lastname' name='lastname' value=theDriver.lastname)
    label(for='age') Age:
    input(type='number' id='age' min='16' name='driverage' value=theDriver.age)
    label(for='city') City:
    input(type='text' id='city' name='city' value=theDriver.city)
    label(for='state') State:
    input(type='text' id='state' name='state' value=theDriver.state)
    input(type='submit' value='Update Driver')

  form(action='/drivers/' + theDriver._id + '/delete' method='post')
    label(for='delete')
    input(type='submit' id='delete' value='Delete Driver')
  br
  a(href='/drivers') Cancel